<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <com.ocnyang.contourview.ContourView
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/main_background"
            app:contour_style="Sand"
            app:shader_mode="RadialGradient"
            app:shader_startcolor="@color/bkTransPrimary"
            app:shader_endcolor="@color/bkTransSecondary"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/container"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            >

            <xyz.hanks.library.NumberView
                android:id="@+id/number1"
                android:layout_width="144dp"
                android:layout_height="wrap_content"
                app:charSpace="2dp"
                app:number="0"
                app:numberColor="#FFF"
                app:textSize="132sp" />
            <TextView
                android:layout_width="28dp"
                android:layout_height="wrap_content"
                android:textSize="100sp"
                android:textColor="#FFF"
                android:text="@string/dot"/>
            <xyz.hanks.library.NumberView
                android:id="@+id/number2"
                android:layout_width="144dp"
                android:layout_height="wrap_content"
                app:number="0"
                app:numberColor="#FFF"
                app:charSpace="2dp"
                app:textSize="132sp"/>
        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/container"
            >
            <GridLayout
                android:columnCount="3"
                android:rowCount="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.sackcentury.shinebuttonlib.ShineButton
                    android:layout_column="0"
                    android:layout_row="0"
                    android:layout_gravity="start"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:color/darker_gray"
                    android:id="@+id/share_button"
                    app:btn_color="@android:color/white"
                    app:btn_fill_color="@android:color/white"
                    app:allow_random_color="false"
                    app:enable_flashing="false"
                    app:big_shine_color="#FF6666"
                    app:click_animation_duration="200"
                    app:shine_animation_duration="1500"
                    app:shine_turn_angle="10"
                    app:small_shine_offset_angle="20"
                    app:small_shine_color="#CC9999"
                    app:shine_count="8"
                    app:siShape="@raw/like"/>

                <com.sackcentury.shinebuttonlib.ShineButton
                    android:layout_column="1"
                    android:layout_row="0"
                    android:layout_gravity="center"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:color/darker_gray"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:id="@+id/retry_button"
                    app:btn_color="@android:color/white"
                    app:btn_fill_color="@android:color/white"
                    app:allow_random_color="true"
                    app:siShape="@raw/smile"/>

                <com.sackcentury.shinebuttonlib.ShineButton
                    android:layout_column="2"
                    android:layout_row="0"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_gravity="end"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:color/darker_gray"
                    android:id="@+id/ranking_button"
                    app:btn_color="@android:color/white"
                    app:btn_fill_color="@android:color/white"
                    app:allow_random_color="true"
                    app:siShape="@raw/star"/>
            </GridLayout>

        </FrameLayout>

</android.support.constraint.ConstraintLayout>